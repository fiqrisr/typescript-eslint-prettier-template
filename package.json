	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/fiqrisr/typescript-eslint-prettier-template/issues"
	},
	"homepage": "https://github.com/fiqrisr/typescript-eslint-prettier-template#readme",
	"devDependencies": {
		"@types/node": "^15.3.0",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"eslint": "^7.26.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"prettier": "^2.3.0",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.2.4"
	}
