{
	"name": "typescript-eslint-prettier-template",
	"version": "1.0.0",
	"description": "Node.js TypeScript project using ESlint and Prettier",
	"main": "index.js",
	"scripts": {
		"start": "ts-node-dev --transpile-only --respawn --poll src/index.ts",
		"build": "NODE_ENV=production rm -rf build && tsc",
		"lint": "yarn eslint src --fix --ext .ts,.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fiqrisr/typescript-eslint-prettier-template.git"
	},
